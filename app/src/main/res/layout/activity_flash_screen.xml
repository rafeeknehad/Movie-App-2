<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.flashScreen"
    android:background="@color/flasScreenColor"
    >

    <TextView
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:text="Movies App"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/flashScreen_imageview"
        android:id="@+id/flashScreen_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/flashScreen_imageview"
        android:layout_centerInParent="true"
        android:src="@drawable/flash_screen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>